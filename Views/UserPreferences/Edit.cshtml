@model CakeProduction.ViewModels.UserPrefencesViewModel

@{
    ViewData["Title"] = "Your Favorite Ingredients";
}

<div class="container py-4">
    <h2 class="mb-4 text-danger fw-bold">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="bg-light p-4 rounded shadow-sm">
        <div class="row">
            @foreach (var ingredient in Model.AllIngredients)
            {
                <div class="col-md-4 mb-3">
                    <div class="form-check">
                        <input type="checkbox"
                               class="form-check-input"
                               id="ingredient_@ingredient.IngredientId"
                               name="SelectedIngredients"
                               value="@ingredient.IngredientId"
                               @(Model.SelectedIngredients.Contains(ingredient.IngredientId) ? "checked" : "") />
                        <label class="form-check-label" for="ingredient_@ingredient.IngredientId">
                            @ingredient.Name
                        </label>
                    </div>
                </div>
            }
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-outline-success px-4 mt-3">💾 Save Preferences</button>
        </div>
    </form>
</div>
