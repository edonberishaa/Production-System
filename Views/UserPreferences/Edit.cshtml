@model CakeProduction.ViewModels.UserPrefencesViewModel

@{
    ViewData["Title"] = "Your Favorite Ingredients";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div>
        @foreach (var ingredient in Model.AllIngredients)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input"
                       name="SelectedIngredientIds"
                       value="@ingredient.IngredientId"
                       @(Model.SelectedIngredients.Contains(ingredient.IngredientId) ? "checked" : "") />
                <label class="form-check-label">@ingredient.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Preferences</button>
</form>
