@model IEnumerable<CakeProduction.Models.Product>

@{
    ViewData["Title"] = "Our Cakes";
}

<div class="page-header mb-4">
    <h2 class="fw-bold text-danger">🎂 Our Delicious Cakes</h2>
    <p class="text-muted">Explore our collection of hand-crafted cakes made with love and the finest ingredients.</p>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card cake-card shadow-sm border-0 w-100">
                <img src="@item.ImageUrl" class="card-img-top cake-image" alt="@item.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-dark fw-semibold">@item.Name</h5>
                    <p class="card-text text-muted flex-grow-1">@item.Description</p>
                    <a asp-action="Details" asp-route-id="@item.ProductId"
                       class="btn btn-outline-danger btn-sm mt-3">🍰 View Recipe</a>
                </div>
            </div>
        </div>
    }
</div>
