@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-danger">Error</h1>
        <h2 class="mb-4 text-danger">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <h3 class="mt-4">Development Mode</h3>
        <p>
            Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
        </p>
        <p class="alert alert-warning">
            <strong>Important:</strong> The Development environment should <em>never</em> be enabled in deployed applications.
            It may expose sensitive exception details to end users.
        </p>
        <p>
            For local debugging, enable the <strong>Development</strong> environment by setting the
            <code>ASPNETCORE_ENVIRONMENT</code> environment variable to <strong>Development</strong> and restarting the app.
        </p>

        <a href="javascript:history.back()" class="btn btn-primary mt-3">Go Back</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3 ms-2">Home</a>
    </div>
</div>
